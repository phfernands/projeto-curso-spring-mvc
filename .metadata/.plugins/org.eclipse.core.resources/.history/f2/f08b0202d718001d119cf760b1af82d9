<html>
	<head th:replace="~{base :: head}">
	</head>
	
	<body onLoad="onLoad()">
		<div th:replace="~{base :: logomarca}">
		</div>
		<div class="container" id="ofertas">
			<div th:replace="~{base :: titulo('Faça Sua Oferta')}">
			</div>
		
			<div class="card mb-3" v-for="pedido in pedidos">
				<div class="card-header alert alert-primary">{{pedido.nomePedido}}</div>
				<div class="card-body">
					<div class="row">
						<div class="col-12 col-sm-8 mb-3">
							<div>Produto</div>
							<div><a v-bind:href="pedido.urlDoProduto">{{pedido.nomePedido}}</a></div>
							
							<div>Descrição</div>
							<div>
								<textarea disabled="disabled" class="form-control">{{pedido.descricao}}</textarea>
							</div>
							
							<div class="row mt-3">
								<div class="col-md-4">Valor: <input class="form-control" v-model="pedido.preco"/> </div>
								<div class="col-md-8">Data de entrega: <input class="form-control" v-model="pedido.dataEntrega"/> </div>
							</div>
							
							<div class="mt-3">
								<label>Comentário</label>
								<textarea class="form-control" v-model="pedido.comentario"></textarea>
							</div>
							<button v-on:click="enviarOferta(pedido)" type="button" class="btn btn-primary mt-3" >Enviar Oferta</button>
						</div>
						<div class="col-12 col-sm-4">
							<div>
								<img class="img-thumbnail" v-bind:src="pedido.urlImagem" src=" "/>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script>
			function onLoad() {
				 const { createApp } = Vue
					
				 createApp({
				   data() {
				     return {
				       pedidos: []
				       
				     }
				   }, mounted() {
					   axios
					   	.get('http://localhost:8080/api/pedidos/aguardando')
					   	.then(response => (this.pedidos = response.data));
				   }, methods: {
					   enviarOferta: function(pedido){
						   axios
						   	.post('http://localhost:8080/api/pedidos/aguardando')
					   }
				   }
				 }).mount('#ofertas')
			}

		</script>
		<script src="https://unpkg.com/vue@3"></script>
		<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	</body>
</html>